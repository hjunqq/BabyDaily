/* Pages Home WXSS */
.container {
  min-height: 100vh;
  padding: 20px;
  box-sizing: border-box;
  background: linear-gradient(180deg, #FFF0F5 0%, #FFF7F9 100%);
}

/* Version A: Glassmorphism */
.theme-A .header {
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.6);
}

/* Version B: Semi-flat */
.theme-B .header {
  background: #FFF;
  box-shadow: 0 2px 8px rgba(90, 58, 46, 0.05);
  border: none;
}

.header {
  display: flex;
  align-items: center;
  padding: 16px;
  border-radius: 24px;
  margin-bottom: 24px;
}

.avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: #EEE;
  margin-right: 12px;
}

.greeting {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 18px;
  font-weight: 700;
  color: var(--sakura-text);
}

.subtitle {
  font-size: 12px;
  color: #8B4513;
  opacity: 0.8;
}

.theme-toggle {
  font-size: 10px;
  padding: 4px 8px;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 12px;
}

/* Stats Row */
.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24px;
}

.stat-card {
  flex: 1;
  background: #FFF;
  border-radius: 16px;
  padding: 12px;
  margin: 0 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4px 12px rgba(255, 183, 197, 0.15);
}

.stat-value {
  font-size: 16px;
  font-weight: 700;
  color: var(--sakura-text);
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* Activity List */
.list-section {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20px;
  padding: 16px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--sakura-text);
}

.view-all {
  font-size: 12px;
  color: #999;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.activity-item:last-child {
  border-bottom: none;
}

.time {
  width: 60px;
  font-size: 14px;
  color: #999;
  font-weight: 500;
}

.details {
  flex: 1;
  display: flex;
  align-items: baseline;
}

.type {
  font-size: 15px;
  font-weight: 600;
  color: var(--sakura-text);
  margin-right: 8px;
}

.value {
  font-size: 14px;
  color: #666;
}

/* FAB */
.fab-container {
  position: fixed;
  bottom: 32px;
  left: 50%;
  transform: translateX(-50%);
}

.fab-btn {
  background-color: var(--sakura-pink);
  color: #FFF;
  border-radius: 32px;
  padding: 12px 32px;
  display: flex;
  align-items: center;
  box-shadow: 0 8px 20px rgba(255, 183, 197, 0.6);
  border: none;
}

.fab-icon {
  font-size: 24px;
  margin-right: 8px;
  line-height: 1;
}

.fab-text {
  font-size: 16px;
  font-weight: 700;
}
