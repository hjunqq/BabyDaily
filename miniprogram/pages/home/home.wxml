<view class="container theme-{{theme}}">
  <!-- Header -->
  <view class="header">
    <image class="avatar" src="/images/avatar-placeholder.png" mode="aspectFill"></image>
    <view class="greeting">
      <text class="title">{{greeting}}</text>
      <text class="subtitle">Sakura Baby</text>
    </view>
    <view class="theme-toggle" bindtap="toggleTheme">切换到 {{theme === 'A' ? '扁平' : '玻璃'}}</view>
  </view>

  <!-- Today's Overview -->
  <view class="overview-section">
    <view class="section-title">今日概览</view>
    <view class="stats-row">
      <view class="stat-card">
        <text class="stat-value">{{todayStats.milk}}ml</text>
        <text class="stat-label">奶量</text>
      </view>
      <view class="stat-card">
        <text class="stat-value">{{todayStats.diaper}}</text>
        <text class="stat-label">尿布</text>
      </view>
      <view class="stat-card">
        <text class="stat-value">{{todayStats.sleep}}</text>
        <text class="stat-label">睡眠</text>
      </view>
    </view>
  </view>

  <!-- Recent Activity -->
  <view class="list-section">
    <view class="section-header">
      <text class="section-title">最近动态</text>
      <text class="view-all">查看全部</text>
    </view>
    <view class="activity-list">
      <block wx:for="{{recentRecords}}" wx:key="id">
        <view class="activity-item">
          <view class="time">{{item.time}}</view>
          <view class="details">
            <text class="type">{{item.type}}</text>
            <text class="value">{{item.value}}</text>
            <text class="label" wx:if="{{item.label}}">{{item.label}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- Fixed Action Button -->
  <view class="fab-container">
    <button class="fab-btn" bindtap="goToRecord">
      <text class="fab-icon">+</text>
      <text class="fab-text">记录</text>
    </button>
  </view>
</view>
